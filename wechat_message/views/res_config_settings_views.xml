<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">WeChat settings</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="wechat_base.res_config_settings_view_form" />
            <field name="arch" type="xml">

                <div id="msg_module_wechat_message" position="replace"/>
                <div id="module_wechat_message" position="after">

                    <div class="col-xs-12 col-md-6 o_setting_box" id="module_wechat_message_sale">
                        <div class="o_setting_left_pane">
                            <field name="module_wechat_message_sale" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="module_wechat_message_sale" />
                            <div class="text-muted"></div>
                            <div class="content-group mt16" attrs="{'invisible': [('module_wechat_message_sale','=',False)]}" id="msg_module_wechat_message_sale">
                                <div class="mt16 text-warning">
                                    <strong>Save</strong> this page and come back here to set up the feature.
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-xs-12 col-md-6 o_setting_box" id="module_wechat_message_purchase">
                        <div class="o_setting_left_pane">
                            <field name="module_wechat_message_purchase" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="module_wechat_message_purchase" />
                            <div class="text-muted"></div>
                            <div class="content-group mt16" attrs="{'invisible': [('module_wechat_message_purchase','=',False)]}" id="msg_module_wechat_message_purchase">
                                <div class="mt16 text-warning">
                                    <strong>Save</strong> this page and come back here to set up the feature.
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            </field>
        </record>


    </data>
</odoo>