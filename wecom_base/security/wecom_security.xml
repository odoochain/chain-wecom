<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="base.module_category_wecom_suites_settings" model="ir.module.category">
        <field name="description">Helps you manage your WeCom.</field>
        <field name="sequence">1</field>
    </record>

    <record id="group_wecom_settings_user" model="res.groups">
        <field name="name">Officer</field>
        <field name="category_id" ref="base.module_category_wecom_suites_settings"/>
        <field name="implied_ids" eval="[(6, 0, [ref('base.group_user')])]"/>
        <field name="comment">The user will be able to approve document created by employees.</field>
    </record>

    <record id="group_wecom_settings_manager" model="res.groups">
        <field name="name">Administrator</field>
        <field name="comment">The user will have access to the wecom configuration as well as statistic reports.</field>
        <field name="category_id" ref="base.module_category_wecom_suites_settings"/>
        <field name="implied_ids" eval="[(4, ref('group_wecom_settings_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <data noupdate="1">
        <record id="base.default_user" model="res.users">
            <field name="groups_id" eval="[(4,ref('group_wecom_settings_manager'))]"/>
        </record>
    </data>

</odoo>