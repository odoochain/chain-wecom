<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="view_wechat_official_accounts_menus_tree">
            <field name="name">wechat.official_accounts.menus.tree</field>
            <field name="model">wechat.official_accounts.menus</field>
            <field name="arch" type="xml">
                <tree expand="1">
                    <field name="sequence" widget="handle" />
                    <field name="app_id" />
                    <field name="name"/>
                    <field name="menu_type"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_wechat_official_accounts_menus_form">
            <field name="name">wechat.official_accounts.menus.form</field>
            <field name="model">wechat.official_accounts.menus</field>
            <field name="arch" type="xml">
                <form>
                    <header>

                    </header>
                    <sheet>
                        <div name="button_box" class="oe_button_box">

                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" />
                            </h1>
                        </div>
                        <group>
                            <group string="Type">
                                <field name="app_id" widget="selection" />
                                <field name="menu_type" widget="selection" />
                            </group>
                            <group string="Parameters">
                                <field name="active"/>
                                <field name="route" attrs="{'invisible': [('menu_type','!=','view')],'required':[('menu_type','=','view')]}"/>
                                <field name="url" attrs="{'invisible': [('menu_type','!=','view')]}"/>
                                <field name="key" attrs="{'invisible': [('menu_type','!=','click')],'required':[('menu_type','=','click')]}"/>
                                <field name="pagepath" attrs="{'invisible': [('menu_type','!=','miniprogram')],'required':[('menu_type','=','miniprogram')]}"/>
                            </group>
                        </group>
                        <group string="Submenu">
                            <field name="submenu_ids">
                                <tree expand="1">
                                    <field name="sequence" widget="handle" />
                                    <field name="name"/>
                                    <field name="menu_type"/>
                                    <field name="active"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="wechat_official_accounts_menus_action" model="ir.actions.act_window">
            <field name="name">Official Accounts Menus</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wechat.official_accounts.menus</field>
            <field name="target">current</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'active_test': False}</field>
        </record>

    </data>
</odoo>