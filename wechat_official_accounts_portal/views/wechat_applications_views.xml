<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="view_wechat_applications_form">
            <field name="name">wechat.applications.form</field>
            <field name="model">wechat.applications</field>
            <field name="inherit_id" ref="wechat_base.view_wechat_applications_form" />
            <field name="arch" type="xml">

                <xpath expr="//div[@name='button_box']/button[last()]" position="after">
                    <!-- <button class="btn oe_stat_button btn-succes" name="get_access_token" type="object" attrs="{'invisible': [('official_accounts_menu_ids','=',False)]}">
                        <div role="img" class="fa fa-key o_button_icon" aria-label="Get Access Token"/>
                        <div class="o_stat_info">
                            <span class="o_stat_value">Get</span>
                            <span class="o_stat_text">Access Token</span>
                        </div>
                    </button> -->
                </xpath>

                <xpath expr="//page[last()]" position="after">
                    <page name="official_accounts_menus" string="Official Accounts Menus">
                        <group>
                            <group col="2">
                                <field name="official_accounts_menu_ids" no_label="1">
                                    <tree expand="1">
                                        <field name="sequence" widget="handle" />
                                        <field name="name"/>
                                        <field name="menu_type"/>
                                        <field name="active"/>
                                    </tree>
                                </field>
                            </group>
                            <group col="2" attrs="{'invisible': [('official_accounts_menu_ids','=',False)]}">
                                <label for="official_accounts_menu_data"/>
                                <div class="o_row">
                                    <field name="official_accounts_menu_data" widget="json_editor" readonly="1"></field>

                                </div>
                                <!-- <label for="official_accounts_menu_data_operate"></label> -->
                                <span class="o_form_label o_form_label_readonly" for="official_accounts_menu_data_operate">Operate</span>
                                <div class="btn-group mt8 o_row w-100" role="group" aria-label="Button group" name="official_accounts_menu_data_operate">
                                    <button class="oe_highlight ml-1" name="download_official_accounts_menu" string="Download" type="object" icon="fa-cloud-download fa-lg" />
                                    <button class="oe_highlight ml-1" name="generate_official_accounts_menu_data" string="Generate data" type="object" icon="fa-file-code-o fa-lg" />
                                    <button class="oe_highlight ml-1" name="upload_official_accounts_menu" string="Upload" type="object" icon="fa-cloud-upload fa-lg" attrs="{'invisible': [('official_accounts_menu_data','=',False)]}"/>
                                </div>
                                <!-- <field name="official_accounts_menu_data" widget="json_editor" readonly="1" no_label="1"></field> -->

                            </group>
                        </group>
                    </page>

                </xpath>
            </field>
        </record>

    </data>
</odoo>