<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_wechat_error_codes_filter" model="ir.ui.view">
            <field name="name">wechat.error_codes.search</field>
            <field name="model">wechat.error_codes</field>
            <field name="arch" type="xml">
                <search string="Errors">
                    <field name="code"/>
                </search>
            </field>
        </record>

        <record id="view_wechat_error_codes_tree" model="ir.ui.view">
            <field name="name">wechat.error_codes.tree</field>
            <field name="model">wechat.error_codes</field>
            <field name="arch" type="xml">
                <tree string="Error" edit="0" create="0" delete="0" multi_edit="0" import="0" export_xlsx="0" >
                    <field name="code" invisible="1"/>
                    <field name="code_text" />
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_wechat_error_codes_form">
            <field name="name">wechat.error_codes.form</field>
            <field name="model">wechat.error_codes</field>
            <field name="arch" type="xml">
                <form create="false" edit="false" delete="false" duplicate="false" import="false">
                    <sheet>
                        <group>
                            <field name="code_text"  />
                        </group>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_view_wechat_error_codes" model="ir.actions.act_window">
            <field name="name">Error code</field>
            <field name="res_model">wechat.error_codes</field>
            <field name="view_mode">tree,form</field>
            <field name="context"></field>
            <field name="search_view_id" ref="view_wechat_error_codes_filter"/>
        </record>

    </data>
</odoo>