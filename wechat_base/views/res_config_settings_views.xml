<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">Wechat base settings</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="20" />
            <field name="inherit_id" ref="base.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">

                    <div class="app_settings_block" data-string="Wechat" string="Wechat Settings"
                        data-key="wechat_base" groups="base.group_system">
                        <field name="company_id" invisible="1" />

                        <div class="app_settings_header pt-1 pb-1 bg-warning bg-opacity-25"
                            id="select_company">
                            <div class="col-xs-12 col-md-6 ms-0 o_setting_box">
                                <div class="o_setting_right_pane border-start-0 ms-0 ps-0">
                                    <div class="content-group">
                                        <div class="row flex-row flex-nowrap mt8 align-items-center">
                                            <label class="col text-nowrap ml8 flex-nowrap"
                                                string="Companies" for="company_id" />
                                            <field name="company_id" class="w-50"
                                                options="{'no_open': True, 'no_create': True}" />
                                        </div>
                                    </div>
                                    <!-- <div class="content-group">
                                        <div class="row flex-row flex-nowrap mt8 align-items-center">
                                            <label class="col text-nowrap ml8 flex-nowrap"
                                                for="company_shortname" />
                                            <field name="company_shortname" class="w-50" />
                                        </div>
                                    </div> -->
                                </div>
                            </div>
                        </div>

                        <div id="wechat_base">
                            <h2>WeChat Basic Settings</h2>
                            <div class="row mt8 o_settings_container">
                                <div class="col-xs-12 col-md-6 o_setting_box">
                                    <div class="o_setting_left_pane">
                                        <i class="fa fa-building fa-lg"
                                            aria-label="Default User Company" />
                                    </div>
                                    <div class="o_setting_right_pane">
                                        <label for="wechat_default_user_company" />
                                        <div class="content-group">
                                            <div class="mt8">
                                                <field name="wechat_default_user_company"
                                                    options="{'no_open': True, 'no_create': True}" />
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-xs-12 col-md-6 o_setting_box">
                                    <div class="o_setting_left_pane">
                                        <i class="fa fa-user fa-lg"
                                            aria-label="Default User Type" />
                                    </div>
                                    <div class="o_setting_right_pane">
                                        <label for="wechat_default_user_type" />
                                        <div class="content-group">
                                            <div class="mt8">
                                                <field name="wechat_default_user_type" />
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>

                        <div id="wechat_official_accounts">
                            <h2>WeChat Official accounts</h2>
                            <div class="row mt8 o_settings_container">
                                <div class="col-xs-12 col-md-6 o_setting_box"
                                    id="module_wechat_official_accounts">
                                    <div class="o_setting_left_pane">
                                        <field name="module_wechat_official_accounts" />
                                    </div>
                                    <div class="o_setting_right_pane">
                                        <label for="module_wechat_official_accounts" />
                                        <div class="text-muted">
                                            <a href="https://open.weixin.qq.com/" target="_blank">WeChat public platform</a> is a new service platform that provides business services and user management capabilities for individuals, enterprises, and organizations.
                                        </div>
                                        <div class="content-group mt16"
                                            attrs="{'invisible': [('module_wechat_official_accounts','=',False)]}"
                                            id="msg_module_wechat_official_accounts">
                                            <div class="mt16 text-warning">
                                                <strong>Save</strong> this page and come back here to set up the feature.
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div id="wechat_website_application">
                            <h2>WeChat website application</h2>
                            <div class="row mt8 o_settings_container">
                                <div class="col-xs-12 col-md-6 o_setting_box"
                                    id="module_wechat_website_application">
                                    <div class="o_setting_left_pane">
                                        <field name="module_wechat_website_application" />
                                    </div>
                                    <div class="o_setting_right_pane">
                                        <label for="module_wechat_website_application" />
                                        <div class="text-muted"> The website application WeChat login is a WeChat OAuth2.0 authorization login system built based on the OAuth2.0 protocol standard. Before conducting WeChat OAuth2.0 authorization login and access, register a developer account on the <a href="https://open.weixin.qq.com/" target="_blank">WeChat open platform</a>, have an approved website application, and obtain the corresponding AppID and AppSecret. After applying for WeChat login and passing the review, the access process can begin.
                                        </div>
                                        <div class="content-group mt16"
                                            attrs="{'invisible': [('module_wechat_website_application','=',False)]}"
                                            id="msg_module_wechat_website_application">
                                            <div class="mt16 text-warning">
                                                <strong>Save</strong> this page and come back here to set up the feature.
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div id="wechat_auth_oauth">
                            <h2>WeChat OAuth2 Authentication</h2>
                            <div class="row mt8 o_settings_container">
                                <div class="col-xs-12 col-md-6 o_setting_box"
                                    id="module_wechat_auth_oauth">
                                    <div class="o_setting_left_pane">
                                        <field name="module_wechat_auth_oauth" />
                                    </div>
                                    <div class="o_setting_right_pane">
                                        <label for="module_wechat_auth_oauth" />
                                        <div class="text-muted"></div>
                                        <div class="content-group mt16"
                                            attrs="{'invisible': [('module_wechat_auth_oauth','=',False)]}"
                                            id="msg_module_wechat_auth_oauth">
                                            <div class="mt16 text-warning">
                                                <strong>Save</strong> this page and come back here to set up the feature.
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div id="wechat_bottom" />

                    </div>

                </xpath>
            </field>
        </record>

        <record id="wechat_config_settings_action" model="ir.actions.act_window">
            <field name="name">Settings</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_id" ref="res_config_settings_view_form" />
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{ 'module' : 'wechat_base', 'bin_size': False}</field>
        </record>

    </data>
</odoo>