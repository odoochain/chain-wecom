    <template id="wechat_auth_oauth.reset_login_name_and_password" name="Reset login name">
        <t t-call="web.login_layout">
            <p class="alert alert-danger" t-if="error" role="alert">
                <t t-esc="error"/>
            </p>
            <form class="oe_reset_login_name_and_password_form" role="form" method="post" t-if="not message" t-attf-action="/wechat/reset_login_name_and_password?redirect=#{redirect}">
                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                <input type="hidden" name="token" t-att-value="token"/>
                <input type="hidden" name="redirect" t-att-value="redirect"/>
                <div class="alert alert-info" role="alert">
                    <h4 class="alert-heading">Reset login name and password</h4>
                    <p>Please use a login name that is easy to remember</p>
                    <hr/>
                    <p class="mb-0">eg: Mobile phone number or email address</p>
                </div>
                <div class="mb-3 field-login">
                    <label for="login" class="col-form-label">Login Name</label>
                    <input type="text" name="login" t-att-value="login" id="login" class="form-control" autofocus="autofocus" required="required" autocapitalize="off"/>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" placeholder="Password" name="password" id="password" t-attf-class="form-control #{'form-control-sm' if form_small else ''}" required="required" autocomplete="current-password" t-att-autofocus="'autofocus' if login else None" maxlength="4096" t-att-minlength="request.env['ir.config_parameter'].sudo().get_param('auth_password_policy.minlength')"/>
                </div>
                <div class="text-center oe_login_buttons d-grid pt-3">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </t>
    </template>

</odoo>