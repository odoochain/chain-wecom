<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">WeChat settings</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="wechat_base.res_config_settings_view_form" />
            <field name="arch" type="xml">

                <div id="msg_module_wechat_auth_oauth" position="replace">
                    <div class="content-group overflow-auto"
                        attrs="{'invisible': [('module_wechat_auth_oauth','=',False)]}">
                        <div class="mt8">
                            <button type="action" name="%(auth_oauth.action_oauth_provider)d"
                                string="OAuth Providers" icon="fa-arrow-right" class="btn-link" />
                        </div>
                        <div class="btn-group mt8" role="group" aria-label="Button group">
                            <button class="oe_highlight ml-1" name="enable_wechat_oauth_login" context="{'type': 'click'}" string="Enable WeChat one click login" type="object" icon="fa-hand-pointer-o fa-lg" />
                            <button class="oe_highlight ml-1" name="enable_wechat_oauth_login" context="{'type': 'scan'}" string="Enable WeChat QR code scanning login" type="object" icon="fa-qrcode  fa-lg" />
                        </div>
                    </div>
                </div>

                <div id="module_wechat_auth_oauth" position="after">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <i class="fa fa fa-refresh fa-lg" role="img" aria-label="Skip Reset" title="Skip Reset"></i>
                        </div>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label fw-bolder">Skip resetting login name and password.</span>
                            <div class="text-muted">
                                Skip resetting login name and password for first registration and login.
                            </div>
                            <div class="content-group mt8">
                                <div class="row">
                                    <label for="wechat_official_accounts_auth_skip_reset"
                                        class="o_light_label col-lg-9" />
                                    <field name="wechat_official_accounts_auth_skip_reset" class="col-lg-3 w-25" />
                                </div>
                                <div class="row">
                                    <label for="wechat_website_application_auth_skip_reset"
                                        class="o_light_label col-lg-9" />
                                    <field name="wechat_website_application_auth_skip_reset" class="col-lg-3 w-25" />
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </field>
        </record>


    </data>
</odoo>