<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <function model="auth.oauth.provider" name="write">
            <value eval="[ref('auth_oauth.provider_openerp')]" />
            <value eval="{'enabled': False}" />
        </function>

        <record id="provider_wechat_scan_code" model="auth.oauth.provider">
            <field name="name">Wechat Scan Code OAuth2</field>
            <field name="auth_endpoint">https://open.weixin.qq.com/connect/qrconnect</field>
            <field name="scope">snsapi_login</field>
            <field name="validation_endpoint"></field>
            <field name="css_class">fa fa-fw fa-wechat text-primary wechat_scan_code</field>
            <field name="body">Scan the code to log in on WeChat</field>
            <field name="enabled" eval="True" />
        </record>

        <record id="provider_wechat_one_click_login" model="auth.oauth.provider">
            <field name="name">Wechat one-click login OAuth2</field>
            <field name="auth_endpoint">https://open.weixin.qq.com/connect/oauth2/authorize</field>
            <field name="scope">snsapi_userinfo</field>
            <field name="validation_endpoint"></field>
            <field name="css_class">fa fa-fw fa-wechat text-primary wechat_one_click</field>
            <field name="body">One click login on WeChat</field>
            <field name="enabled" eval="True" />
        </record>
    </data>

    <data noupdate="0">
        <record id="provider_wechat_scan_code" model="auth.oauth.provider">
            <field name="name">Wechat Scan Code OAuth2</field>
            <field name="auth_endpoint">https://open.weixin.qq.com/connect/qrconnect</field>
            <field name="scope">snsapi_login</field>
            <field name="validation_endpoint"></field>
            <field name="css_class">fa fa-fw fa-wechat text-primary</field>
            <field name="body">Scan the code to log in on WeChat</field>
            <field name="enabled" eval="True" />
        </record>

        <record id="provider_wechat_one_click_login" model="auth.oauth.provider">
            <field name="name">Wechat one-click login OAuth2</field>
            <field name="auth_endpoint">https://open.weixin.qq.com/connect/oauth2/authorize</field>
            <field name="scope">snsapi_userinfo</field>
            <field name="validation_endpoint"></field>
            <field name="css_class">fa fa-fw fa-wechat text-primary wechat_one_click</field>
            <field name="body">One click login on WeChat</field>
            <field name="enabled" eval="True" />
        </record>

